                                                <t t-if="magaza_kontak.street2"><br/><t t-esc="magaza_kontak.street2"/></t>
                                                <t t-if="magaza_kontak.city"><br/><t t-esc="magaza_kontak.city"/></t>
                                                <t t-if="magaza_kontak.state_id"><br/><t t-esc="magaza_kontak.state_id.name"/></t>
