<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_ariza_kayit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="ariza_onarim.report_ariza_kayit_document" t-lang="o.env.lang"/>
            </t>
        </t>
    </template>

    <template id="report_ariza_kayit_document">
        <t t-call="web.external_layout">
            <style>
                /* Tek sayfa boyutlandırma - kompakt tasarım */
                @page {
                    size: A4;
                    margin: 0.5cm;
                }
                
                /* Tüm sayfa geçişlerini engelle */
                * {
                    page-break-after: avoid !important;
                    page-break-before: avoid !important;
                    page-break-inside: avoid !important;
                }
                
                /* Body ve html için sayfa geçişi engelleme */
                body, html {
                    page-break-after: avoid !important;
                    page-break-before: avoid !important;
                    font-size: 11px !important;
                }
                
                /* External layout için sayfa geçişi engelleme */
                .o_report_layout_standard {
                    page-break-after: avoid !important;
                    page-break-before: avoid !important;
                }
                
                /* Boş sayfa engelleme */
                .o_report_layout_standard:after,
                .o_report_layout_standard:before {
                    display: none !important;
                }
                
                /* Sayfa numarası font boyutunu küçült */
                .page-number {
                    font-size: 8px !important;
                }
                
                /* Sayfa sonunda boşluk bırakma */
                .page {
                    page-break-after: avoid !important;
                    page-break-before: avoid !important;
                }
                
                /* Boş sayfa engelleme - ek kurallar */
                .o_report_layout_standard > *:last-child {
                    page-break-after: avoid !important;
                }
                
                /* Tüm div'ler için sayfa geçişi engelleme */
                div {
                    page-break-after: avoid !important;
                    page-break-before: avoid !important;
                }
                
                /* Düzenli ve toplu tasarım - boyutlar daha da büyütüldü */
                .row {
                    margin-bottom: 12px !important;
                }
                
                .mb-4 {
                    margin-bottom: 12px !important;
                }
                
                h2 {
                    font-size: 20px !important;
                    margin-bottom: 12px !important;
                    text-align: center !important;
                    font-weight: bold !important;
                }
                
                h5 {
                    font-size: 16px !important;
                    margin-bottom: 8px !important;
                    font-weight: bold !important;
                    color: #2c3e50 !important;
                }
                
                .table {
                    font-size: 13px !important;
                    margin-bottom: 12px !important;
                    border-collapse: collapse !important;
                }
                
                .table td {
                    padding: 6px 10px !important;
                    border: 1px solid #ddd !important;
                }
                
                .table th {
                    padding: 6px 10px !important;
                    border: 1px solid #ddd !important;
                    background-color: #f8f9fa !important;
                    font-weight: bold !important;
                }
                
                .gonderi-adresi {
                    padding: 10px !important;
                    font-size: 13px !important;
                    margin-bottom: 12px !important;
                    border-radius: 5px !important;
                    line-height: 1.5 !important;
                }
                
                .gonderi-adresi strong {
                    font-size: 15px !important;
                    display: block !important;
                    margin-bottom: 8px !important;
                }
                
                .gonderi-adresi br {
                    line-height: 1.4 !important;
                }
                
                strong {
                    color: #2c3e50 !important;
                }
            </style>
            
            <!-- Analitik Hesap Bilgileri - Üst Kısım -->
            <!-- Yönetici onarımı başlattıktan sonra (teknik_onarim ve sonrası) yer değiştir -->
            <t t-set="onarim_baslatildi" t-value="o.state in ['teknik_onarim', 'onaylandi', 'yonetici_tamamlandi', 'tamamlandi', 'teslim_edildi']"/>
            
            <div class="row mb-4">
                <div class="col-6">
                    <div class="text-left" style="border: 2px solid #000; background-color: #f0f0f0; font-weight: bold; padding: 10px; line-height: 1.5; min-height: 120px;">
                        <strong style="display: block; margin-bottom: 8px;">Gönderen:</strong>
                        <!-- Yönetici onarımı başlattıktan sonra: Sol tarafta teknik servis -->
                        <t t-if="onarim_baslatildi">
                            <t t-if="o.teknik_servis == 'DTL BEYOĞLU'">
                                DTL BEYOĞLU<br/>
                                Şahkulu mh. Nakkas çıkmazı No: 1/1 No:10-46 / 47<br/>
                                Beyoğlu, İstanbul
                            </t>
                            <t t-elif="o.teknik_servis == 'DTL OKMEYDANI'">
                                DTL OKMEYDANI<br/>
                                MAHMUT ŞEVKET PAŞA MAH. ŞAHİNKAYA SOK NO 31 OKMEYDANI<br/>
                                İstanbul
                            </t>
                            <t t-elif="o.teknik_servis == 'ZUHAL ARIZA DEPO'">
                                ZUHAL ARIZA DEPO<br/>
                                Halkalı merkez mh. Dereboyu cd. No:8/B<br/>
                                İstanbul
                            </t>
                            <t t-elif="o.teknik_servis == 'ZUHAL NEFESLİ'">
                                ZUHAL NEFESLİ<br/>
                                Şahkulu, Galip Dede Cd. No:33, 34421 Beyoğlu/İstanbul
                            </t>
                            <t t-elif="o.teknik_servis == 'TEDARİKÇİ' and o.ariza_tipi == 'musteri' and o.marka_id and o.marka_id.partner_id">
                                <t t-esc="o.marka_id.partner_id.name"/><br/>
                                <t t-esc="o.marka_id.partner_id.street or ''"/><br/>
                                <t t-if="o.marka_id.partner_id.street2"><t t-esc="o.marka_id.partner_id.street2"/><br/></t>
                                <t t-esc="o.marka_id.partner_id.city or ''"/>, <t t-esc="o.marka_id.partner_id.country_id.name or ''"/>
                            </t>
                            <t t-elif="o.teknik_servis == 'TEDARİKÇİ' and o.ariza_tipi == 'musteri' and o.marka_id and not o.marka_id.partner_id">
                                <t t-esc="o.marka_id.name"/> - Tedarikçi Adresi Tanımlı Değil
                            </t>
                            <t t-elif="o.teknik_servis == 'TEDARİKÇİ' and o.ariza_tipi == 'musteri' and o.tedarikci_adresi">
                                <t t-esc="o.tedarikci_adresi"/>
                            </t>
                            <t t-elif="o.teknik_servis == 'TEDARİKÇİ' and o.tedarikci_id">
                                <t t-esc="o.tedarikci_id.name"/><br/>
                                <t t-esc="o.tedarikci_id.street or ''"/><br/>
                                <t t-esc="o.tedarikci_id.city or ''"/>, <t t-esc="o.tedarikci_id.country_id.name or ''"/>
                            </t>
                            <t t-elif="o.teknik_servis == 'TEDARİKÇİ' and o.teknik_servis_adres">
                                <t t-esc="o.teknik_servis_adres"/>
                            </t>
                            <t t-else="">
                                <t t-esc="o.teknik_servis"/>
                            </t>
                        </t>
                        <!-- Kullanıcı yazdırdığında: Sol tarafta mağaza -->
                        <t t-else="">
                            <!-- Özel durum: Tünel analitik hesabı için sabit adres -->
                            <t t-if="o.analitik_hesap_id and ('Tünel' in o.analitik_hesap_id.name or 'TUNEL' in o.analitik_hesap_id.name.upper())">
                                Tünel Mağaza<br/>
                                Galip Dede Cad. No:33 Tünel<br/>
                                Beyoğlu<br/>
                                İstanbul (TR) 34000<br/>
                                Türkiye
                            </t>
                            <t t-elif="o.analitik_hesap_id and o.analitik_hesap_id.adres">
                                <div style="font-size: 12px; font-weight: bold; line-height: 1.2;"><t t-esc="o.analitik_hesap_id.adres"/></div>
                            </t>
                            <t t-elif="o.analitik_hesap_id and o.analitik_hesap_id.partner_id and o.analitik_hesap_id.partner_id.street">
                                <div style="font-size: 12px; font-weight: bold; line-height: 1.2;">
                                    <t t-esc="(o.analitik_hesap_id.name.replace('Perakende - ', '') + ' Mağaza') if o.analitik_hesap_id.name else ''"/><br/>
                                    <t t-esc="o.analitik_hesap_id.partner_id.street or ''"/>
                                    <t t-if="o.analitik_hesap_id.partner_id.street2"><br/><t t-esc="o.analitik_hesap_id.partner_id.street2"/></t>
                                    <t t-if="o.analitik_hesap_id.partner_id.city"><br/><t t-esc="o.analitik_hesap_id.partner_id.city"/></t>
                                    <t t-if="o.analitik_hesap_id.partner_id.state_id"><br/><t t-esc="o.analitik_hesap_id.partner_id.state_id.name"/></t>
                                    <t t-if="o.analitik_hesap_id.partner_id.zip"><br/><t t-esc="o.analitik_hesap_id.partner_id.zip"/></t>
                                </div>
                            </t>
                            <t t-elif="o.analitik_hesap_id and o.analitik_hesap_id.name">
                                <div style="font-size: 12px; font-weight: bold; line-height: 1.2;">
                                    <t t-esc="(o.analitik_hesap_id.name.replace('Perakende - ', '') + ' Mağaza') if o.analitik_hesap_id.name else ''"/>
                                    <t t-set="zuhal_partner" t-value="env['res.partner'].search([('name', '=', 'Zuhal Dış Ticaret A.Ş.')], limit=1)"/>
                                    <t t-if="zuhal_partner">
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', o.analitik_hesap_id.name.replace('Perakende - ', ''))], limit=1)"/>
                                        <t t-if="magaza_kontak">
                                            <br/><t t-esc="magaza_kontak.street or ''"/>
                                            <t t-if="magaza_kontak.street2"><br/><t t-esc="magaza_kontak.street2"/></t>
                                            <t t-if="magaza_kontak.city"><br/><t t-esc="magaza_kontak.city"/></t>
                                            <t t-if="magaza_kontak.state_id"><br/><t t-esc="magaza_kontak.state_id.name"/></t>
                                            <t t-if="magaza_kontak.zip"><br/><t t-esc="magaza_kontak.zip"/></t>
                                        </t>
                                    </t>
                                </div>
                            </t>
                            <t t-else="">
                                <div t-field="company.name"/><br/>
                                <div t-field="company.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                            </t>
                        </t>
                        <t t-if="not onarim_baslatildi and o.analitik_hesap_id and o.analitik_hesap_id.telefon">
                            <div>Tel: <t t-esc="o.analitik_hesap_id.telefon"/></div>
                        </t>
                        <t t-if="not onarim_baslatildi and o.analitik_hesap_id and o.analitik_hesap_id.email">
                            <div>Email: <t t-esc="o.analitik_hesap_id.email"/></div>
                        </t>
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-right gonderi-adresi" style="border: 2px solid #000; background-color: #f0f0f0; font-weight: bold; padding: 10px; min-height: 120px;">
                        <strong style="color: #000; display: block; margin-bottom: 8px;">GÖNDERİ ADRESİ:</strong>
                        <!-- Teslim Mağazası seçilmişse öncelikle onu göster -->
                        <t t-if="o.teslim_magazasi_id">
                            <!-- Özel durum: Tünel teslim mağazası için sabit adres -->
                            <t t-if="'Tünel' in o.teslim_magazasi_id.name or 'TUNEL' in o.teslim_magazasi_id.name.upper()">
                                Tünel Mağaza<br/>
                                Galip Dede Cad. No:33 Tünel<br/>
                                Beyoğlu<br/>
                                İstanbul (TR) 34000<br/>
                                Türkiye
                            </t>
                            <t t-elif="o.teslim_magazasi_id.adres">
                                <t t-esc="o.teslim_magazasi_id.name or ''"/><br/>
                                <t t-esc="o.teslim_magazasi_id.adres"/>
                            </t>
                            <t t-elif="o.teslim_magazasi_id.partner_id and o.teslim_magazasi_id.partner_id.street">
                                <t t-esc="o.teslim_magazasi_id.partner_id.street"/>
                                <t t-if="o.teslim_magazasi_id.partner_id.street2"><br/><t t-esc="o.teslim_magazasi_id.partner_id.street2"/></t>
                                <t t-if="o.teslim_magazasi_id.partner_id.city"><br/><t t-esc="o.teslim_magazasi_id.partner_id.city"/></t>
                                <t t-if="o.teslim_magazasi_id.partner_id.state_id"><br/><t t-esc="o.teslim_magazasi_id.partner_id.state_id.name"/></t>
                                <t t-if="o.teslim_magazasi_id.partner_id.zip"><br/><t t-esc="o.teslim_magazasi_id.partner_id.zip"/></t>
                                <t t-if="o.teslim_magazasi_id.partner_id.country_id"><br/><t t-esc="o.teslim_magazasi_id.partner_id.country_id.name"/></t>
                            </t>
                            <t t-elif="o.teslim_magazasi_id.name">
                                <t t-set="zuhal_partner" t-value="env['res.partner'].search([('name', '=', 'Zuhal Dış Ticaret A.Ş.')], limit=1)"/>
                                <t t-if="zuhal_partner">
                                    <t t-set="magaza_adi_temiz" t-value="o.teslim_magazasi_id.name.replace('Perakende - ', '').strip()"/>
                                    <!-- Özel durum: Tünel mağazası için öncelikli arama (Showroom Mağaza) -->
                                    <t t-if="'Tünel' in magaza_adi_temiz or 'TUNEL' in magaza_adi_temiz.upper()">
                                        <!-- Tünel analitik hesabı için partner adı "Showroom Mağaza" olarak kayıtlı -->
                                        <!-- Önce tam eşleşme dene -->
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'Showroom Mağaza')], limit=1)"/>
                                        <!-- Tam eşleşme yoksa ilike ile ara -->
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', 'Showroom Mağaza')], limit=1)"/>
                                        </t>
                                        <!-- Hala bulunamadıysa sadece "Showroom" ile ara -->
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', 'Showroom')], limit=1)"/>
                                        </t>
                                        <!-- Son çare: parent_id kontrolü olmadan da ara (eğer parent_id yanlışsa) -->
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('name', '=', 'Showroom Mağaza')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('name', 'ilike', 'Showroom Mağaza')], limit=1)"/>
                                        </t>
                                    </t>
                                    <!-- Önce tam eşleşme dene -->
                                    <t t-if="not magaza_kontak">
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', magaza_adi_temiz)], limit=1)"/>
                                    </t>
                                    <!-- Tam eşleşme yoksa "Mağaza" ekleyerek ara -->
                                    <t t-if="not magaza_kontak and 'Mağaza' not in magaza_adi_temiz">
                                        <t t-set="magaza_adi_mağaza" t-value="magaza_adi_temiz + ' Mağaza'"/>
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', magaza_adi_mağaza)], limit=1)"/>
                                    </t>
                                    <!-- Tünel için diğer alternatifler (Showroom bulunamadıysa) -->
                                    <t t-if="not magaza_kontak and ('Tünel' in magaza_adi_temiz or 'TUNEL' in magaza_adi_temiz.upper())">
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'Tünel')], limit=1)"/>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'Tünel Mağaza')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'TUNEL')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', 'Tünel')], limit=1)"/>
                                        </t>
                                    </t>
                                    <!-- Özel durum: Tema World mağazası için alternatif isimler -->
                                    <t t-if="not magaza_kontak and ('Tema' in magaza_adi_temiz or 'Temaworld' in magaza_adi_temiz)">
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'Tema World Mağaza')], limit=1)"/>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'Tema World')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'Temaworld')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'TEMA WORLD')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', '=', 'TEMAWORLD')], limit=1)"/>
                                        </t>
                                        <t t-if="not magaza_kontak">
                                            <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', 'Tema World')], limit=1)"/>
                                        </t>
                                    </t>
                                    <!-- Tam eşleşme yoksa ilike ile ara -->
                                    <t t-if="not magaza_kontak">
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', magaza_adi_temiz)], limit=1)"/>
                                    </t>
                                    <!-- Hala bulunamadıysa, boşlukları kaldırıp ara (Temaworld için) -->
                                    <t t-if="not magaza_kontak">
                                        <t t-set="magaza_adi_no_space" t-value="magaza_adi_temiz.replace(' ', '')"/>
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', magaza_adi_no_space)], limit=1)"/>
                                    </t>
                                    <!-- Son çare: sadece ilk kelimeyi ara -->
                                    <t t-if="not magaza_kontak and ' ' in magaza_adi_temiz">
                                        <t t-set="ilk_kelime" t-value="magaza_adi_temiz.split()[0]"/>
                                        <t t-set="magaza_kontak" t-value="env['res.partner'].search([('parent_id', '=', zuhal_partner.id), ('name', 'ilike', ilk_kelime)], limit=1)"/>
                                    </t>
                                    <t t-if="magaza_kontak">
                                        <t t-if="magaza_kontak.street"><t t-esc="magaza_kontak.street"/></t>
                                        <t t-if="magaza_kontak.street2"><br/><t t-esc="magaza_kontak.street2"/></t>
                                        <t t-if="magaza_kontak.city"><br/><t t-esc="magaza_kontak.city"/></t>
                                        <t t-if="magaza_kontak.state_id"><br/><t t-esc="magaza_kontak.state_id.name"/></t>
                                        <t t-if="magaza_kontak.zip"><br/><t t-esc="magaza_kontak.zip"/></t>
                                        <t t-if="magaza_kontak.country_id"><br/><t t-esc="magaza_kontak.country_id.name"/></t>
                                    </t>
                                </t>
                            </t>
                        </t>
                        <!-- Yönetici onarımı başlattıktan sonra: Sağ tarafta mağaza -->
                        <t t-elif="onarim_baslatildi">
                            <!-- Teslim edildi durumunda özel kontrol -->
                            <t t-if="o.state == 'teslim_edildi'">
                                <!-- Adrese Gönderim seçilmişse - Seçilen teslimat adresini göster -->
                                <t t-if="o.teslim_alan == 'Adrese Gönderim' and o.teslimat_adresi_id">
                                    <t t-esc="o.teslimat_adresi_id.name or ''"/><br/>
                                    <t t-if="o.teslimat_adresi_id.street"><t t-esc="o.teslimat_adresi_id.street"/></t>
                                    <t t-if="o.teslimat_adresi_id.street2"><br/><t t-esc="o.teslimat_adresi_id.street2"/></t>
                                    <t t-if="o.teslimat_adresi_id.city"><br/><t t-esc="o.teslimat_adresi_id.city"/></t>
                                    <t t-if="o.teslimat_adresi_id.state_id"><br/><t t-esc="o.teslimat_adresi_id.state_id.name"/></t>
                                    <t t-if="o.teslimat_adresi_id.zip"><br/><t t-esc="o.teslimat_adresi_id.zip"/></t>
                                    <t t-if="o.teslimat_adresi_id.country_id"><br/><t t-esc="o.teslimat_adresi_id.country_id.name"/></t>
                                </t>
                                <!-- Fallback: Eğer teslimat_adresi_id yoksa partner_id kullan -->
                                <t t-elif="o.teslim_alan == 'Adrese Gönderim' and o.partner_id">
                                    <t t-esc="o.partner_id.name"/><br/>
                                    <t t-esc="o.partner_id.street or ''"/><br/>
                                    <t t-if="o.partner_id.street2" t-esc="o.partner_id.street2"/><br/>
