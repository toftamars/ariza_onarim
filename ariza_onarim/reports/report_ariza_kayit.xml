<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_ariza_kayit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure" id="oe_structure_ariza_kayit_1"/>
                        <div class="row">
                            <div class="col-12">
                                <h2 class="text-center text-uppercase">ARIZA KAYIT FORMU</h2>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>ARIZA NO:</strong> <span t-field="doc.name"/>
                            </div>
                            <div class="col-6">
                                <strong>TARİH:</strong> <span t-field="doc.tarih"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>MÜŞTERİ:</strong> <span t-field="doc.partner_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>TELEFON:</strong> <span t-field="doc.partner_id.phone"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>ÜRÜN:</strong> <span t-field="doc.urun"/>
                            </div>
                            <div class="col-6">
                                <strong>MODEL:</strong> <span t-field="doc.model"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>MARKA:</strong> <span t-field="doc.marka_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>GARANTİ DURUMU:</strong> <span t-field="doc.garanti_kapsaminda_mi"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>ARIZA TANIMI:</strong>
                                <p t-field="doc.ariza_tanimi"/>
                            </div>
                        </div>
                        <t t-if="doc.onarim_bilgisi">
                            <div class="row mt-4">
                                <div class="col-12">
                                    <strong>ONARIM BİLGİSİ:</strong>
                                    <p t-field="doc.onarim_bilgisi"/>
                                </div>
                            </div>
                        </t>
                        <t t-if="doc.ucret_bilgisi">
                            <div class="row mt-4">
                                <div class="col-12">
                                    <strong>ÜCRET BİLGİSİ:</strong>
                                    <p t-field="doc.ucret_bilgisi"/>
                                </div>
                            </div>
                        </t>
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>NOTLAR:</strong>
                                <p t-field="doc.notlar"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <strong>İLETİŞİM:</strong>
                                <p>0212 249 85 10 (Dahili: 153)</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_ariza_kayit" model="ir.actions.report">
        <field name="name">Arıza Kaydı</field>
        <field name="model">ariza.kayit</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ariza_onarim.report_ariza_kayit</field>
        <field name="report_file">ariza_onarim.report_ariza_kayit</field>
        <field name="print_report_name">'Arıza Kaydı - %s' % (object.name)</field>
        <field name="attachment">(object.state == 'onaylandi') and ((object.name)+'.pdf')</field>
        <field name="binding_model_id" ref="model_ariza_kayit"/>
        <field name="binding_type">report</field>
    </record>
</odoo> 