<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ariza_teslim_wizard_form" model="ir.ui.view">
        <field name="name">ariza.teslim.wizard.form</field>
        <field name="model">ariza.teslim.wizard</field>
        <field name="arch" type="xml">
            <form string="Teslim Alan Bilgisi">
                <group>
                    <group>
                        <field name="musteri_adi" readonly="1" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        <field name="urun" readonly="1" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        <field name="is_ikinci_transfer" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="ariza_id" invisible="1"/>
                        <field name="ariza_tipi" invisible="1"/>
                    </group>
                </group>
                <group attrs="{'invisible': ['|', ('is_ikinci_transfer', '=', True), ('ariza_tipi', '=', 'magaza')]}">
                    <field name="teslim_alan" required="1" placeholder="Teslim alan kişinin adını girin"/>
                </group>
                <group attrs="{'invisible': [('is_ikinci_transfer', '=', False)]}">
                    <group>
                        <field name="ikinci_transfer_kaynak" required="1"/>
                        <field name="ikinci_transfer_hedef" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_teslim_et" string="Teslim Et" type="object" class="btn-primary" attrs="{'invisible': [('is_ikinci_transfer', '=', True)]}"/>
                    <button name="action_teslim_et" string="2. Transfer Oluştur" type="object" class="btn-primary" attrs="{'invisible': [('is_ikinci_transfer', '=', False)]}"/>
                    <button string="İptal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_ariza_teslim_wizard" model="ir.actions.act_window">
        <field name="name">Teslim Alan Bilgisi</field>
        <field name="res_model">ariza.teslim.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_ariza_kayit"/>
    </record>
</odoo> 