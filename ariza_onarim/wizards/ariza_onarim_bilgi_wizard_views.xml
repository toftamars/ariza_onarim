<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ariza_onarim_bilgi_wizard_form" model="ir.ui.view">
        <field name="name">ariza.onarim.bilgi.wizard.form</field>
        <field name="model">ariza.onarim.bilgi.wizard</field>
        <field name="arch" type="xml">
            <form string="Onarım Bilgilerini Doldur">
                <group>
                    <group>
                        <field name="ariza_id" invisible="1"/>
                        <field name="partner_id" invisible="1"/>
                        <field name="musteri_adi"/>
                        <field name="urun"/>
                        <field name="ariza_tipi"/>
                        <field name="teslim_magazasi_id" options='{"no_create": true, "no_open": true}' attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        <field name="adresime_gonderilsin" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        <field name="musteri_adresi_id" options='{"no_create": false, "no_open": false}' context="{'default_parent_id': partner_id, 'default_type': 'delivery'}" attrs="{'invisible': [('adresime_gonderilsin', '=', False), ('ariza_tipi', '=', 'magaza')], 'required': [('adresime_gonderilsin', '=', True)], 'readonly': [('adresime_gonderilsin', '=', False)]}"/>
                    </group>
                </group>
                <!-- Onarım Dışı Alanları (Sadece Mağaza Ürünü için) -->
                <group attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}">
                    <field name="onarim_mumkun_degil"/>
                    <field name="onarim_mumkun_degil_aciklama" 
                           placeholder="Onarımın mümkün olmama nedenini açıklayın..." 
                           attrs="{'invisible': [('onarim_mumkun_degil', '=', False)], 'required': [('onarim_mumkun_degil', '=', True)]}"/>
                </group>

                <!-- Normal Onarım Bilgileri -->
                <group attrs="{'invisible': [('onarim_mumkun_degil', '=', True)]}">
                    <field name="onarim_bilgisi" placeholder="Yapılan onarım işlemlerini detaylı olarak açıklayın..."/>
                </group>

                <group attrs="{'invisible': [('onarim_mumkun_degil', '=', True)]}">
                    <group>
                        <field name="garanti_kapsaminda_mi" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="onarim_ucreti" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')], 'required': [('garanti_kapsaminda_mi', '=', 'hayir')]}"/>
                    </group>
                    <group>
                        <field name="ucret_bilgisi" placeholder="Ücret ile ilgili açıklama..." attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_onarim_bilgilerini_kaydet" 
                            string="Onarımı Tamamla ve SMS Gönder" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="İptal" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 