<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_ariza_kayit">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Arıza Kaydı</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Arıza No:</strong>
                                <span t-field="o.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Tarih:</strong>
                                <span t-field="o.tarih"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>İşlem Tipi:</strong>
                                <span t-field="o.islem_tipi"/>
                            </div>
                            <div class="col-6">
                                <strong>Arıza Tipi:</strong>
                                <span t-field="o.ariza_tipi"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Müşteri:</strong>
                                <span t-field="o.partner_id"/>
                            </div>
                            <div class="col-6">
                                <strong>Analitik Hesap:</strong>
                                <span t-field="o.analitik_hesap_id"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Ürün:</strong>
                                <span t-field="o.urun"/>
                            </div>
                            <div class="col-6">
                                <strong>Model:</strong>
                                <span t-field="o.model"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-12">
                                <strong>Arıza Tanımı:</strong>
                                <p t-field="o.ariza_tanimi"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-12">
                                <strong>Notlar:</strong>
                                <p t-field="o.notlar"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_ariza_kayit" model="ir.actions.report">
        <field name="name">Arıza Kaydı</field>
        <field name="model">ariza.kayit</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ariza_onarim.report_ariza_kayit</field>
        <field name="report_file">ariza_onarim.report_ariza_kayit</field>
        <field name="print_report_name">'Arıza Kaydı - %s' % (object.name)</field>
        <field name="attachment">False</field>
        <field name="binding_model_id" ref="model_ariza_kayit"/>
        <field name="binding_type">report</field>
    </record>
</odoo> 