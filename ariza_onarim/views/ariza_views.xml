<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ariza_kayit_form" model="ir.ui.view">
        <field name="name">ariza.kayit.form</field>
        <field name="model">ariza.kayit</field>
        <field name="arch" type="xml">
            <form string="Arıza Kaydı">
                <header>
                    <button name="action_onayla" string="Onayla" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_tamamla" string="Tamamla" type="object" class="oe_highlight" states="onaylandi"/>
                    <button name="action_print" string="Yazdır" type="object" class="btn-primary" states="onaylandi,tamamlandi"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,onaylandi,tamamlandi"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tarih"/>
                            <field name="islem_tipi"/>
                            <field name="ariza_tipi"/>
                            <field name="analitik_hesap_id"/>
                            <field name="marka" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}"/>
                            <field name="magaza_ariza_tipi" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}"/>
                        </group>
                        <group>
                            <field name="partner_id" attrs="{'required': [('ariza_tipi', '=', 'musteri')]}"/>
                            <field name="siparis_yok" attrs="{'invisible': [('ariza_tipi', '!=', 'musteri')]}"/>
                            <field name="invoice_line_id" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('siparis_yok', '=', True)]}"/>
                            <field name="urun" attrs="{'invisible': ['|', ('ariza_tipi', '=', 'magaza'), ('magaza_ariza_tipi', '=', 'tedarikci')], 'required': ['&amp;', ('ariza_tipi', '=', 'musteri'), ('siparis_yok', '=', True)]}"/>
                            <field name="model" attrs="{'invisible': ['|', ('ariza_tipi', '=', 'magaza'), ('magaza_ariza_tipi', '=', 'tedarikci')], 'required': ['&amp;', ('ariza_tipi', '=', 'musteri'), ('siparis_yok', '=', True)]}"/>
                            <field name="seri_no"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Arıza Detayı">
                            <group>
                                <field name="ariza_tanimi"/>
                                <field name="notlar"/>
                            </group>
                        </page>
                        <page string="Sipariş Bilgileri" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}">
                            <group>
                                <field name="siparis_no"/>
                                <field name="siparis_tarihi"/>
                                <field name="fatura_no"/>
                                <field name="fatura_tarihi"/>
                                <field name="fatura_kalem_id" options="{'no_create': True}"/>
                            </group>
                        </page>
                        <page string="Ürün Bilgileri" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}">
                            <group>
                                <field name="urun_kodu"/>
                                <field name="urun_adi"/>
                                <field name="urun_marka"/>
                                <field name="urun_model"/>
                                <field name="urun_seri_no"/>
                            </group>
                        </page>
                        <page string="Transfer Bilgileri" attrs="{'invisible': [('ariza_tipi', '=', 'musteri')]}">
                            <group>
                                <field name="transfer_id" readonly="1"/>
                                <field name="transfer_irsaliye" attrs="{'invisible': [('transfer_id', '=', False)]}"/>
                                <field name="transferler_ids" widget="many2many_tags" readonly="1" options="{'no_create': True, 'no_open': False}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_ariza_kayit_tree" model="ir.ui.view">
        <field name="name">ariza.kayit.tree</field>
        <field name="model">ariza.kayit</field>
        <field name="arch" type="xml">
            <tree string="Arıza Kayıtları" decoration-info="state == 'draft'" decoration-success="state == 'onaylandi'" decoration-warning="state == 'tamamlandi'" decoration-danger="state == 'iptal'">
                <field name="name"/>
                <field name="islem_tipi"/>
                <field name="ariza_tipi"/>
                <field name="teknik_servis"/>
                <field name="partner_id"/>
                <field name="analitik_hesap_id"/>
                <field name="tedarikci_id"/>
                <field name="marka_id"/>
                <field name="urun"/>
                <field name="model"/>
                <field name="tarih"/>
                <field name="state"/>
                <field name="sorumlu_id"/>
                <field name="garanti_kapsaminda_mi"/>
                <field name="onarim_ucreti"/>
            </tree>
        </field>
    </record>
</odoo> 