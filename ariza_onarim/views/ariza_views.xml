<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ariza_kayit_form" model="ir.ui.view">
        <field name="name">ariza.kayit.form</field>
        <field name="model">ariza.kayit</field>
        <field name="arch" type="xml">
            <form string="Arıza Kaydı">
                <header>
                    <button name="action_onayla" string="Onayla" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_tamamla" string="Tamamla" type="object" class="oe_highlight" states="onaylandi"/>
                    <button name="action_iptal" string="İptal" type="object" states="draft,onaylandi"/>
                    <button name="action_print" string="Yazdır" type="object" class="oe_highlight"/>
                    <button name="action_print_teslim" string="Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_onarim" string="Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_tedarikci" string="Tedarikçi Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('teknik_servis', '!=', 'tedarikci')]}"/>
                    <button name="action_print_dtl" string="DTL Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('teknik_servis', '!=', 'dtl')]}"/>
                    <button name="action_print_zuhal" string="Zuhal Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('teknik_servis', '!=', 'zuhal')]}"/>
                    <button name="action_print_magaza" string="Mağaza Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}"/>
                    <button name="action_print_musteri" string="Müşteri Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('ariza_tipi', '!=', 'musteri')]}"/>
                    <button name="action_print_teknik" string="Teknik Yazdır" type="object" class="oe_highlight" attrs="{'invisible': [('ariza_tipi', '!=', 'teknik')]}"/>
                    <button name="action_print_tedarikci_teknik" string="Tedarikçi Teknik Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('ariza_tipi', '!=', 'teknik')]}"/>
                    <button name="action_print_dtl_teknik" string="DTL Teknik Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('ariza_tipi', '!=', 'teknik')]}"/>
                    <button name="action_print_zuhal_teknik" string="Zuhal Teknik Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('ariza_tipi', '!=', 'teknik')]}"/>
                    <button name="action_print_magaza_teknik" string="Mağaza Teknik Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('ariza_tipi', '!=', 'teknik')]}"/>
                    <button name="action_print_musteri_teknik" string="Müşteri Teknik Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('ariza_tipi', '!=', 'teknik')]}"/>
                    <button name="action_print_tedarikci_teslim" string="Tedarikçi Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_dtl_teslim" string="DTL Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_zuhal_teslim" string="Zuhal Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_magaza_teslim" string="Mağaza Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_musteri_teslim" string="Müşteri Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_tedarikci_onarim" string="Tedarikçi Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_dtl_onarim" string="DTL Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_zuhal_onarim" string="Zuhal Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_magaza_onarim" string="Mağaza Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_musteri_onarim" string="Müşteri Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_tedarikci_teknik_teslim" string="Tedarikçi Teknik Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_dtl_teknik_teslim" string="DTL Teknik Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_zuhal_teknik_teslim" string="Zuhal Teknik Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_magaza_teknik_teslim" string="Mağaza Teknik Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_musteri_teknik_teslim" string="Müşteri Teknik Teslim Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_tedarikci_teknik_onarim" string="Tedarikçi Teknik Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_dtl_teknik_onarim" string="DTL Teknik Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_zuhal_teknik_onarim" string="Zuhal Teknik Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_magaza_teknik_onarim" string="Mağaza Teknik Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_musteri_teknik_onarim" string="Müşteri Teknik Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_tedarikci_teslim_onarim" string="Tedarikçi Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_dtl_teslim_onarim" string="DTL Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_zuhal_teslim_onarim" string="Zuhal Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_magaza_teslim_onarim" string="Mağaza Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_musteri_teslim_onarim" string="Müşteri Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_tedarikci_teknik_teslim_onarim" string="Tedarikçi Teknik Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'tedarikci'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_dtl_teknik_teslim_onarim" string="DTL Teknik Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'dtl'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_zuhal_teknik_teslim_onarim" string="Zuhal Teknik Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('teknik_servis', '!=', 'zuhal'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_magaza_teknik_teslim_onarim" string="Mağaza Teknik Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <button name="action_print_musteri_teknik_teslim_onarim" string="Müşteri Teknik Teslim Onarım Yazdır" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'musteri'), ('ariza_tipi', '!=', 'teknik'), ('islem_tipi', '!=', 'teslim')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,onaylandi,tamamlandi"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ariza_kabul_id" attrs="{'invisible': [('islem_tipi', '!=', 'teslim')]}"/>
                            <field name="islem_tipi"/>
                            <field name="ariza_tipi"/>
                            <field name="teknik_servis" attrs="{'invisible': [('ariza_tipi', 'not in', ['musteri', 'magaza'])]}"/>
                            <field name="magaza_ariza_tipi" attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('teknik_servis', '!=', False)]}"/>
                            <field name="transfer_metodu" attrs="{'invisible': [('ariza_tipi', 'not in', ['magaza', 'teknik'])]}"/>
                            <field name="tarih"/>
                            <field name="sorumlu_id"/>
                            <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                        </group>
                        <group>
                            <field name="partner_id" required="1" attrs="{'invisible': [('ariza_tipi', 'in', ['magaza'])], 'required': [('ariza_tipi', 'not in', ['magaza'])]}"/>
                            <field name="analitik_hesap_id" required="1"/>
                            <field name="magaza_urun_id" string="Ürün" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}"/>
                            <field name="marka_id" attrs="{'invisible': [('ariza_tipi', 'not in', ['magaza', 'teknik'])]}"/>
                            <field name="tedarikci_id" attrs="{'invisible': [('teknik_servis', '!=', 'tedarikci')]}"/>
                            <field name="tedarikci_adresi" attrs="{'invisible': [('teknik_servis', '!=', 'tedarikci')]}"/>
                            <field name="tedarikci_telefon" attrs="{'invisible': [('teknik_servis', '!=', 'tedarikci')]}"/>
                            <field name="tedarikci_email" attrs="{'invisible': [('teknik_servis', '!=', 'tedarikci')]}"/>
                            <field name="transfer_id" readonly="1"/>
                            <field name="transfer_irsaliye" attrs="{'invisible': [('transfer_id', '=', False)]}"/>
                            <field name="siparis_yok" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                            <field name="invoice_line_id" attrs="{'invisible': ['|', '|', ('islem_tipi', '=', 'teslim'), ('ariza_tipi', '=', 'magaza'), ('siparis_yok', '=', True)], 'required': [('ariza_tipi', 'in', ['musteri', 'teknik']), ('siparis_yok', '=', False)]}"/>
                            <field name="fatura_tarihi" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                            <field name="transferler_ids" widget="many2many_tags" readonly="1" options="{'no_create': True, 'no_open': False}"/>
                            <field name="sms_gonderildi" readonly="1"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('ariza_tipi', 'not in', ['magaza', 'teknik'])]}">
                        <group>
                            <field name="kaynak_konum_id" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        </group>
                        <group>
                            <field name="hedef_konum_id" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': ['|', ('magaza_ariza_tipi', '!=', 'tedarikci'), ('marka_id', '=', False)]}">
                        <field name="marka_urunleri_ids" widget="many2many_tags" attrs="{'invisible': ['|', ('magaza_ariza_tipi', '!=', 'tedarikci'), ('marka_id', '=', False), ('ariza_tipi', 'not in', ['magaza', 'teknik', 'musteri'])]}"/>
                    </group>
                    <group attrs="{'invisible': ['|', ('ariza_tipi', '!=', 'magaza'), ('marka_id', '=', False)]}">
                        <field name="magaza_urun_id" attrs="{'invisible': [('ariza_tipi', '!=', 'magaza')]}"/>
                    </group>
                    <notebook>
                        <page string="Sipariş Bilgileri" attrs="{'invisible': [('ariza_tipi', 'in', ['magaza', 'teknik'])]}">
                            <group>
                                <field name="siparis_yok"/>
                                <field name="invoice_line_id" attrs="{'invisible': [('siparis_yok', '=', True)], 'required': [('siparis_yok', '=', False)]}"/>
                                <field name="fatura_tarihi" attrs="{'invisible': [('ariza_tipi', '=', 'magaza')]}"/>
                            </group>
                        </page>
                        <page string="Ürün Bilgileri" attrs="{'invisible': [('ariza_tipi', 'in', ['magaza', 'teknik'])]}">
                            <group>
                                <field name="urun" attrs="{'required': [('siparis_yok', '=', True)]}"/>
                                <field name="marka_id" attrs="{'required': [('siparis_yok', '=', True)]}"/>
                                <field name="model" attrs="{'required': [('siparis_yok', '=', True)]}"/>
                                <field name="garanti_suresi" readonly="1"/>
                                <field name="garanti_bitis_tarihi" readonly="1"/>
                                <field name="kalan_garanti" readonly="1"/>
                            </group>
                        </page>
                        <page string="Arıza Tanımı">
                            <group>
                                <field name="ariza_tanimi" required="1"/>
                                <field name="onarim_bilgisi" attrs="{'invisible': [('islem_tipi', '!=', 'teslim')], 'required': [('islem_tipi', '=', 'teslim')]}"/>
                                <field name="garanti_kapsaminda_mi" attrs="{'invisible': [('islem_tipi', '!=', 'teslim')], 'required': [('islem_tipi', '=', 'teslim')]}"/>
                                <field name="ucret_bilgisi" attrs="{'invisible': [('islem_tipi', '!=', 'teslim')]}"/>
                                <field name="notlar"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_ariza_kayit_tree" model="ir.ui.view">
        <field name="name">ariza.kayit.tree</field>
        <field name="model">ariza.kayit</field>
        <field name="arch" type="xml">
            <tree string="Arıza Kayıtları" decoration-info="state == 'draft'" decoration-success="state == 'onaylandi'" decoration-warning="state == 'tamamlandi'" decoration-danger="state == 'iptal'">
                <field name="name"/>
                <field name="islem_tipi"/>
                <field name="ariza_tipi"/>
                <field name="teknik_servis"/>
                <field name="partner_id"/>
                <field name="analitik_hesap_id"/>
                <field name="tedarikci_id"/>
                <field name="marka_id"/>
                <field name="urun"/>
                <field name="model"/>
                <field name="tarih"/>
                <field name="state"/>
                <field name="sorumlu_id"/>
                <field name="garanti_kapsaminda_mi"/>
                <field name="onarim_ucreti"/>
                <field name="sms_gonderildi"/>
            </tree>
        </field>
    </record>
</odoo> 