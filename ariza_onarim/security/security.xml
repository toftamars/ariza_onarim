<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Arıza Onarım Kullanıcı Grubu -->
        <record id="group_ariza_user" model="res.groups">
            <field name="name">Arıza Onarım / Kullanıcı</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="comment">Arıza kayıtları oluşturabilir, görüntüleyebilir ve düzenleyebilir. Tüm iç kullanıcılar (base.group_user) bu yetkilere sahiptir.</field>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user')), (4, ref('stock.group_stock_manager')), (4, ref('base.group_user'))]"/>
        </record>

        <!-- Arıza Onarım Yönetici Grubu -->
        <record id="group_ariza_manager" model="res.groups">
            <field name="name">Arıza Onarım / Yönetici</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="comment">Arıza kayıtlarını yönetebilir, onaylayabilir ve silebilir. Bu gruba kullanıcı eklemek için: Settings &gt; Users &amp; Companies &gt; Groups &gt; Arıza Onarım / Yönetici</field>
            <!-- KRİTİK GÜVENLİK: base.group_system kaldırıldı - süper kullanıcı yetkisi verilmemeli -->
            <field name="implied_ids" eval="[(4, ref('group_ariza_user')), (4, ref('stock.group_stock_user')), (4, ref('stock.group_stock_manager')), (4, ref('base.group_user'))]"/>
        </record>



        <!-- Arıza kayıtları için record rule - Company bazlı erişim -->
        <record id="ariza_kayit_rule" model="ir.rule">
            <field name="name">Arıza Onarım - Arıza Kayıtları Erişimi</field>
            <field name="model_id" ref="model_ariza_kayit"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>



    </data>
</odoo> 